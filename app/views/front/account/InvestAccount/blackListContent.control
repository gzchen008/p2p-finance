<script type="text/javascript">   
     
     function reason(name,reason){
         $("#name").html(name);
         $("#reason").html(reason);
         $("#xf_mem_acc_sjvip_tcc").center();
         $("#xf_mem_acc_sjvip_tcc").show();
     }
     
     $("#close").click(function(){
         $("#xf_mem_acc_sjvip_tcc").hide();
     
     })
     
     function removeBlacklist(id){
            var removeBlacklist = #{jsAction @removeBlacklist(':blacklistId')/}
			$.post(removeBlacklist({blacklistId:id}),function(data){
			var arr=eval(data);
			if(arr.error.code < 0){
			     alert(arr.error.msg);
			     return;
			}
			alert(arr.error.msg);
			location.reload();
			});
     
     }
     
        $(function(){
         $("#xf_mem_acc_sjvip_tcc").hide();
     });
     
	    $(function(){
			$("#key").focus(function(){
				 
				  if($(this).val() == "请输入关键词"){  
	                  $(this).val("");           
				  } 
			}).blur(function(){
				 
				 if ($(this).val() == '') {
	                $(this).val("请输入关键词");
	             }
			});
		});
		
		function search(){
		     $("#submit").submit();
		
		}
		
		function showPage(currPage, pageSize){
		    $("#currPage").val(currPage);
		    $("#pageSize").val(pageSize);
		    $("#submit").submit();
		}
</script>   